x = int(input("Введите число x:"))
a = int(input("Введите число a:"))
if x<1:
    print("Ответ:",(x**2)+(a**2))
elif x>1: 
    print("Ответ:",(x**2)+(a**2))
a=int(input("Введите кол-во в миллиметрах:"))
b=int(input("Введите кол-во в сантиметрах:"))
c=int(input("Введите кол-во в дециметрах:"))
print("Ответ в миллиметрах:",a*1000000)
print("Ответ в сантиметрах:",b*100000)
print("Ответ в дециметрах:",c*10000)
